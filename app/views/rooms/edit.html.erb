<div class="create">
  <h3>ルーム編集</h3>
  <div class="errormesse">※全て入力必須</div> <br>
  <div class="create_form">

    <%= form_for @room do |f| %>

        <%= f.label :name ,class:"profile_label"%>
        <%= f.text_field :name ,class:"form-control  ", placeholder:"必須"%> <br>

        <%= f.label :address,class:"profile_label" %>
        <%= f.text_field :address,class:"form-control",placeholder:"必須" %> <br>

        <%= f.label :price ,class:"profile_label"%>
        <%= f.text_field :price,class:"form-control",placeholder:"必須" %> <br>

        <%= f.label :introduction,class:"profile_label" %>
        <%= f.text_area :introduction ,class:"form-control",placeholder:"必須",style:"height: 100px"%> <br>

        <%= f.label :image,class:"profile_label" %>
        <%= f.file_field :image,class:"form-control" %> <br>

        <p><small>現在のルーム画像</small></p>

          <% if @room.image? %>
            <%= image_tag @room.image.url,style:"height: 200px" %>
          <% else %>
            <%= image_tag '/default.png',style:"height: 200px"%>
          <% end %>



      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
