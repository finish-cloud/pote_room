<div class="create">
  <h4>ルーム基本情報</h4>
    <div class="errormessage">※全て入力必須</div> <br>

  <div class="create_form">
  <%= render "shared/error", resource: @room %>
  <%= form_for @room do |f| %>
      <%= f.label :name ,class:"profile_label"%>
      <%= f.text_field :name ,class:"form-control ", placeholder:"必須"%>
      <%= f.label :address,class:"profile_label" %>
      <%= f.text_field :address,class:"form-control",placeholder:"必須" %>
      <%= f.label :price ,class:"profile_label"%>
      <%= f.text_field :price,class:"form-control",placeholder:"必須" %>
      <%= f.label :introduction,class:"profile_label" %>
      <%= f.text_area :introduction ,class:"form-control",placeholder:"必須"%>
      <%= f.label :image,class:"profile_label" %>
      <%= f.file_field :image,class:"form-control" %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  </div>
</div>
